extends ../layouts/design.pug
block content
 h1 Create User
 if errors
  each error in errors
   .alert.alert-danger=error
 form(action="/users/create", method="POST", class="d-flex")
  label(for="name") Name
  input#name(class="form-control ml-2 mr-2", name="name", type="text", value=values ? values.name : "")
  label(for="phone") Phone
  input#phone(class="form-control ml-2 mr-2", name="phone", type="text", value=values ? values.phone : "")
  button(class="btn btn-outline-danger") Create